---
import BaseHead from "@/components/BaseHead.astro";
import Navigation from "@/components/global/Navigation.astro";
import Sidetab from "@/components/global/Sidetab.astro";
import Footer from "@/components/global/Footer.astro";

---

<html lang="en" class="selection:bg-retro-primary selection:text-retro-dark">
  <head>
    <BaseHead />
    <style is:global>
      @import url('https://fonts.cdnfonts.com/css/zx-spectrum-7');
      @import font-family: 'Departure Mono';
    </style>
  </head>
  <BaseHead />
</head>
<body class="text-white bg-black">
  <div class="retro-grid-bg"></div>
  <Navigation />
  <Sidetab />
  <div class="lg:pl-48">
    <main class="mx-auto max-w-7xl px-4 pt-32 md:pt-24 sm:pt-20">
      <slot />
    </main>
    <Footer />
  </div>
</body>
</html>